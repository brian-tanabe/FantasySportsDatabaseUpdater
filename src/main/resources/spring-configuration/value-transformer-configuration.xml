<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="unescapeAmpersandsValueTransformer" class="com.btanabe.fsdu.processors.ValueTransformer">
        <constructor-arg name="classWhichPerformsTheValueTransformation" value="org.apache.commons.lang3.StringEscapeUtils" />
        <constructor-arg name="transformingMethodName" value="unescapeXml" />
        <constructor-arg name="classTypeOfTheInputToTheTransformingMethod" ref="stringClass" />
        <constructor-arg name="inputValueToTheTransformationMethod" ref="stringEscapeUtils" />
        <constructor-arg name="defaultValueWhenNull" value="" />
    </bean>

    <bean id="nullToNegativeOneAsIntegerValueTransformer" class="com.btanabe.fsdu.processors.ValueTransformer">
        <constructor-arg name="classWhichPerformsTheValueTransformation" value="com.btanabe.fsdu.models.factories.IntegerFactory" />
        <constructor-arg name="transformingMethodName" value="integerValue" />
        <constructor-arg name="classTypeOfTheInputToTheTransformingMethod" ref="integerClass" />
        <constructor-arg name="inputValueToTheTransformationMethod" ref="zeroInteger" />
        <constructor-arg name="defaultValueWhenNull" ref="negativeOneInteger" />
    </bean>

    <bean id="nullToZeroAsDoubleValueTransformer" class="com.btanabe.fsdu.processors.ValueTransformer">
        <constructor-arg name="classWhichPerformsTheValueTransformation" value="com.btanabe.fsdu.models.factories.DoubleFactory" />
        <constructor-arg name="transformingMethodName" value="doubleValue" />
        <constructor-arg name="classTypeOfTheInputToTheTransformingMethod" ref="doubleClass" />
        <constructor-arg name="inputValueToTheTransformationMethod" ref="zeroInteger" />
        <constructor-arg name="defaultValueWhenNull" ref="zeroDouble" />
    </bean>

    <bean id="integerClass" class="java.lang.Class" factory-method="forName">
        <constructor-arg value="java.lang.Integer" />
    </bean>

    <bean id="stringClass" class="java.lang.Class" factory-method="forName">
        <constructor-arg value="java.lang.String" />
    </bean>

    <bean id="doubleClass" class="java.lang.Class" factory-method="forName">
        <constructor-arg value="java.lang.Double" />
    </bean>

    <bean id="zeroInteger" class="java.lang.Integer">
        <constructor-arg value="0" />
    </bean>

    <bean id="zeroDouble" class="java.lang.Double">
        <constructor-arg value="0.0" />
    </bean>

    <bean id="negativeOneInteger" class="java.lang.Integer">
        <constructor-arg value="-1" />
    </bean>

    <bean id="stringEscapeUtils" class="org.apache.commons.lang3.StringEscapeUtils"/>
</beans>